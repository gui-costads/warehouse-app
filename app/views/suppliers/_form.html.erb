<% if(@supplier.errors.any?) %>
	<ul>
	<% @supplier.errors.full_messages.each do | msg| %>
		<li><%= msg %> </li>
	<% end %>
	</ul>
<% end %>
<%= form_with(model: @supplier) do |form| %>
	<div>
		<%= form.label :trade_name%>
		<%= form.text_field :trade_name%>
	</div>
	<div>
		<%= form.label :company_name%>
		<%= form.text_field :company_name%>
	</div>
	<div>
		<%= form.label :registration_number%>
		<%= form.text_field :registration_number%>
	<div>
		<%= form.label :address%>
		<%= form.text_field :address%>
	</div>
	<div>
		<%= form.label :email%>
		<%= form.text_field :email%>
	</div>
	<div>
		<%= form.label :phone_number%>
		<%= form.text_field :phone_number%>
	</div>
	<div>
		<%= form.submit 'Salvar'%>
	</div>
<% end %>