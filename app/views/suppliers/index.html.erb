<h3> Fornecedores </h3>
<% if @suppliers.any?%>
	<table>
	<thead>
	<tr>
		<th>Nome Fantasia </th>
		<th> Razão Social </th>
		<th> CNPJ </th>		
	</tr>
	</thead>
	<tbody>
	<tr>
	<% @suppliers.each do |s|%>
		
		<td><%= link_to s.trade_name, supplier_path(s.id) %></td>
		<td><%= s.company_name %></td>
		<td><%= s.registration_number %></td>	
	</tr>
	<%end%>
	
	</tbody>
	</table>
<% else %>
  <p>Não existem Fornecedores cadastrados!</p>

<% end %>

<%= link_to 'Cadastrar Fornecedor', new_supplier_path%>