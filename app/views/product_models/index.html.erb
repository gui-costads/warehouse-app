<h3> Modelos de Produtos </h3>

<% if @product_models.any?%>
	<table>
	<thead>
	<tr>
		<th> Marca </th>
		<th>Modelo</th>
        <th>SKU</th>
	</tr>
	</thead>
	<tbody>
	<tr>
	<%@product_models.each do |pm| %>
		<td> <%= pm.supplier.trade_name %></td>
		<td><%= link_to pm.name , product_model_path(pm.id) %></td>
		<td><%= pm.sku %></td>
	</tr>
	<%end%>
	
	</tbody>
	</table>
<% else %>
